@model ProductModel

@section Scripts {
    <partial name = "_ValidationScriptsPartial"></partial>
}
<script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form class="form" asp-controller="Product" asp-action="ProductAdd">
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Nombre</label>
        <input class="form-control" type="text" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="Quantity">Cantidad Existente</label>
        <input class="form-control" type="number" asp-for="Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label class="form-label" asp-for="CreationDate">Fecha de Creaci√≥n</label>
        <input class="form-control" type="date" asp-for="CreationDate">
    </div>
    
    <div class="mb-3">
        <button class="btn btn-primary">Guardar</button>
    </div>
</form>